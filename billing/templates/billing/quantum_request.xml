<?xml version="1.0" encoding="UTF-8" ?>
<QGWRequest> 

  <Details>
    <gwLogin>{{ gw_login }}</gwLogin>
    <RestrictKey>{{ restrict_key }}</RestrictKey>
    <ResponseType>Response</ResponseType>
  </Details>

  <TransactionRequest>

    <!-- Required Fields -->
    <trans_method>CC</trans_method>
    <ccnum>{{ cc_num }}</ccnum>
    <ccmo>{{ cc_mo }}</ccmo> 
    <ccyr>{{ cc_yr }}</ccyr>
    <amount>{{ amount }}</amount>
    <BADDR1>{{ b_addr }}</BADDR1>
    <BZIP1>{{ b_zip }}</BZIP1>

    <!-- Optional Fields -->
    <BCITY>{{ b_city }}</BCITY>
    <BSTATE>{{ b_state }}</BSTATE>
    <BCUST_EMAIL>{{ b_cust_email }}</BCUST_EMAIL>
    <CVV2>{{ cvv }}</CVV2>
    <FNAME>{{ f_name }}</FNAME>
    <LNAME>{{ l_name }}</LNAME>
    <company>{{ company }}</company>
    <phone>{{ phone }}</phone>
    <invoice_description>{{ invoice_description }}</invoice_description> 

  </TransactionRequest>
</QGWRequest>
